1. (in LEEana)               ./run_xs_open.pl
1. (in LEEana)               ./run_xs_full.pl
2. (in LEEana/wiener_svd)    ./copy.pl

--------------------------------------------------------------------------------------
Total - Xp
--------------------------------------------------------------------------------------
root -l --web=off 'convert_single_wiener.C(1)'
../bin/wiener_example wiener.root output.root 2 0.5     // C for 2nd derivative (Xp)
root -l --web=off 'plot_total_xs.C(1,100.,1.,0)'        // RW==1, XS_FACTOR==100., NUCLEONS==1., zeropNp==0 (Xp)


~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Total - 0pNp
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
root -l --web=off 'convert_double_wiener.C(1)'
../bin/wiener_example wiener.root output.root 20 0.5    // C for 2nd derivative (0p followed by Np)
root -l --web=off 'plot_total_xs.C(1,100.,1.,1)'        // RW==1, XS_FACTOR==100., NUCLEONS==1., zeropNp==1 (0p followed by Np)


--------------------------------------------------------------------------------------
diffPpi0 - Xp
--------------------------------------------------------------------------------------
root -l --web=off 'convert_wiener_4ch.C(1)'
../bin/wiener_example wiener.root output.root 2 0.5     // C for 2nd derivative (Xp)
root -l --web=off 'plot_diff_xs.C(1,1000.,40.,0)'       // RW==1, XS_FACTOR==1000., NUCLEONS==40., zeropNp==0 (Xp)


