./bin/merge_hist -r0 -l0

./run_mc_stat.pl

// Includes reweighting
./run_det_sys.pl  &&  ./run_xf_sys.pl 1   

// Doesn't include reweighting
./run_det_sys.pl  &&  ./run_xf_sys.pl 0    

./bin/read_TLee_v20

./bin/plot_hist -r0 -l0 -e3 -sfile_collapsed_covariance_matrix.root

CROSS SECTION EXTRACTION: 
./run_xs_open.pl
./run_xs_full.pl

